{ "manifest_version": 3, "name": "LightNote", "version": "0.1.0", "description": "轻量化网页内容保存工具", "permissions": ["contextMenus", "storage", "activeTab", "notifications"], "host_permissions": ["http://localhost:3001/*"], "background": { "service_worker": "background.js" }, "action": { "default_popup": "popup.html", "default_title": "保存到LightNote" }, "commands": { "save-selection": { "suggested_key": { "default": "Ctrl+Shift+S", "mac": "Command+Shift+S" }, "description": "保存选中内容到LightNote" } }, "content_scripts": [ { "matches": ["<all_urls>"], "js": ["content.js"] } ] }
